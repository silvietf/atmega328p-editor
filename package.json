{
	"name": "atmega328p-editor",
	"displayName": "ATmega328p Assembly Language Editor for Arduino Uno",
	"description": "アセンブリコードを書きやすくする為の拡張機能です。",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.71.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Education",
		"Visualization",
		"Debuggers"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"breakpoints": [
			{
				"language": "ino assembly"
			}
		],
		"debuggers": [
			{
				"type": "asmdebag",
				"label": "asmdebug",
				"program": "./out/extension.js",
				"runtime": "node",
				"initialConfigurations": [
					{
						"type": "asmdebug",
						"request": "launch",
						"name": "asmdebug",
						"program": "${file}"
					}
				]
			}
		],
		"languages": [
			{
				"id": "ino assembly",
				"aliases": [
					"ino assembly",
					"asm"
				],
				"extensions": [
					".asm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"commands": [
			{
				"command": "convert-to-txt",
				"title": ".asmのコードを.ino用に出力。",
				"icon": "$(file-text)"
			},
			{
				"command": "launch-debugger",
				"title": "デバッグ開始",
				"icon": "$(debug-alt)"
			}
		],
		"grammars": [
			{
				"language": "ino assembly",
				"scopeName": "source.asm",
				"path": "./syntaxes/asm.tmLanguage.json"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "editorLangId == ino assembly",
					"command": "convert-to-txt",
					"group": "navigation"
				},
				{
					"when": "editorLangId == ino assembly",
					"command": "launch-debugger",
					"group": "navigation"
				}
			]
		},
		"snippets": [
			{
				"language": "ino assembly",
				"scopeName": "source.asm",
				"path": "./snippets/snippets.code-snippets"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/silvietf/atmega328p-editor"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.71.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	}
}